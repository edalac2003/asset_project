@page "/maintenance/create"

@inject NavigationManager navigationManager
@inject SweetAlertService sweetAlertService

<div class="col-lg-12 grid-margin">
    <div class="card col-lg-12 mx-auto">
        <div class="card-body px-5 py-2">
            <h4 class="card-title">Registro Solicitudes de Mantenimiento </h4>
            <form class="form-sample">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <div class="row mt-2">
                                    <div class="col-md-6">
                                        <label>Fecha</label>
                                        <input type="date" class="form-control"  />
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-6">
                                        <label>Solicitante</label>
                                        <input class="form-control" />
                                    </div>
                                    <div class="col-md-6">
                                        <label>Activo fijo</label>
                                        <select class="form-control">
                                            <option value="1">Activo Fijo 1</option>
                                            <option value="1">Activo Fijo 2</option>
                                            <option value="1">Activo Fijo 3</option>
                                            <option value="1">Activo Fijo 4</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="my-2"></div>
                                @* INICIO resumen del activo fijo *@                                
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <small>Nombre</small>
                                            <div>
                                                <small class="text-muted">NOMBRE DEL ACTIVO FIJO</small>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <small>Código</small>
                                            <div>
                                                <small class="text-muted">ACT-00012345</small>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <small>Categoría</small>
                                            <div>
                                                <small class="text-muted">Equipo de Computo</small>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <small>Ubicación</small>
                                            <div>
                                                <small class="text-muted">Oficina RRHH</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="my-2"></div>
                                    @* Propiedades Particulares *@
                                    <div class="row">
                                        <div class="col-md-3">
                                            <small>PROCESADOR</small>
                                            <div>
                                                <small class="text-muted">Intel Core i5 4ta Gen</small>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <small>MEMORIA</small>
                                            <div>
                                                <small class="text-muted">16Gb DDR 5</small>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <small>DISCO DURO</small>
                                            <div>
                                                <small class="text-muted">SDD 512Gb</small>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <small>Otros</small>
                                            <div>
                                                <small class="text-muted">CD-ROM + Lector Tarjetas</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                @* FIN resumen del activo fijo *@
                                <div class="my-2"></div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <label>Justificación</label>
                                        <div style="width:100%">
                                            <textarea class="form-control " rows="4"></textarea>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                    </div>

                    <div class="row mt-3">
                        <div>
                            <button class="btn btn-outline-danger" @onclick="Return">Cancelar</button>
                            <button class="btn btn-outline-success" >Guardar</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@code {
    private string DateNow = DateTime.UtcNow.ToString("dd/MM/yyyy");

    private string GetToDay()
    {
        return DateTime.UtcNow.ToString("dd/MM/yyyy");
    }

    private void Return() => navigationManager.NavigateTo($"/");
}

@page "/user/register"
@inject NavigationManager navigationManager

<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Registro de Personas</h4>
            <form class="form-sample">
                <p class="card-description"> Personal info </p>
                <div class="row"></div>

                <p class="card-description"> Información del usuario</p>
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label class="col-form-label">Persona</label>
                            <select class="form-control">
                                <option selected>-- Seleccione --</option>
                                <option>Ciudad 1</option>
                                <option>Ciudad 2</option>
                                <option>Ciudad 3</option>
                                <option>Ciudad 4</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="col-form-label">Nombre de Usuario</label>
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="col-form-label">Contraseña</label>
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row ">
                    <div class="col-md-6"></div>
                    <div class="col-md-6 ">
                        <button class="btn btn-dark">Cancelar</button>
                        <button type="submit" class="btn btn-primary mr-2">Guardar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

